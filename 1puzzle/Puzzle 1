import java.util.Scanner;

public class Main {

    static int a;
    static int b;
    static int counter = 0;

    public static void main(String[] args) throws InterruptedException {

        Scanner scanner = new Scanner(System.in);

        a = scanner.nextInt();

        while (scanner.hasNextInt()) {

            b = scanner.nextInt();

            if (a < b) {
                counter++;
            }

            a = b;

        }

        System.out.println(counter);

    }
}
